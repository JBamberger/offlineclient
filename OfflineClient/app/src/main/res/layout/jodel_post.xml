<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="selected"
            type="boolean" />

        <variable
            name="listener"
            type="android.view.View.OnClickListener" />

        <variable
            name="obj"
            type="de.jbamberger.api.provider.jodel.model.Post" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClickListener="@{listener::onClick}"
        tools:context="de.jbamberger.offlineclient.ui.main.MainActivity">

        <TextView
            android:id="@+id/content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="@{obj.message}"
            android:textColor="#ffffff"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Message" />

        <TextView
            android:id="@+id/orderDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text='@{"childCount: " + obj.childCount}'
            android:textColor="#ffffff"
            app:layout_constraintEnd_toStartOf="@+id/textView4"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/content"
            tools:text="Color" />

        <TextView
            android:id="@+id/contentProvider"
            android:layout_width="61dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text='@{"dist: " + obj.distance}'
            android:textColor="#ffffff"
            app:layout_constraintEnd_toStartOf="@+id/textView3"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/textView4"
            app:layout_constraintTop_toBottomOf="@+id/content"
            tools:text="Color" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="61dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text='@{"creAt: " + obj.createdAt}'
            android:textColor="#ffffff"
            app:layout_constraintEnd_toStartOf="@+id/contentProvider"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/orderDate"
            app:layout_constraintTop_toBottomOf="@+id/content"
            tools:text="Color" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="61dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text='@{"usrHandle: " + obj.postOwn}'
            android:textColor="#ffffff"
            app:layout_constraintEnd_toStartOf="@+id/textView2"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/contentProvider"
            app:layout_constraintTop_toBottomOf="@+id/content"
            tools:text="Color" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="61dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text='@{"votes: " + obj.voteCount}'
            android:textColor="#ffffff"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/content"
            tools:text="Color" />

        <ImageView
            android:id="@+id/contentImage"
            android:layout_width="0dp"
            android:layout_height="450dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4"
            app:srcUrl='@{"https:" + obj.imageUrl}'
            app:visIfNN="@{obj.imageUrl}" />

    </android.support.constraint.ConstraintLayout>
</layout>